{
  "name": "like-rtc",
  "version": "1.0.0",
  "description": "WebRTC API",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --serial dev",
    "dev": "rollup -w -c",
    "build:esm": "rollup -c",
    "serve": "browser-sync start --server --files index.html",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/themages/like-rtc.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/themages/like-rtc/issues"
  },
  "homepage": "https://github.com/themages/like-rtc#readme",
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "browser-sync": "^2.27.4",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "2.3.2",
    "rollup": "^2.54.0"
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "RTC/*",
      "Media/*",
      "node_modules/*"
    ],
    "delay": 1000
  }
}
